<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_Color">

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/et_textsize_14"
        android:hint="请输入手机号"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        />
    <View
       style="@style/view_line_h"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/white"
        >
        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/et_textsize_14"
            android:background="@null"
            android:hint="请输验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            />
        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/radius_25dp_white_bg_line_accent_7e_1dp"
            android:gravity="center"
            android:minWidth="96dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/get_code"
            android:textColor="@color/textAccent"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View
        style="@style/view_line_h"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/et_textsize_14"
        android:hint="请输入密码"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        />
    <View
        style="@style/view_line_h"/>
    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/et_textsize_14"
        android:hint="请确认密码"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        />
    <View
        style="@style/view_line_h"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/textAccent_7e"
            android:background="@drawable/radius_25dp_white_bg_line_accent_7e_1dp"
            android:paddingLeft="74dp"
            android:paddingRight="74dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_margin="24dp"
            />
    </LinearLayout>
</LinearLayout>