<?xml version="1.0" encoding="utf-8"?>
<com.xilada.xldutils.view.NavigationBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigationBar"
    style="@style/NavigationBar"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="48dp">
    <Button
        android:id="@+id/leftButton"
        style="@style/BarButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/item_10"
        android:layout_marginRight="@dimen/item_10"
        android:layout_weight="0"
        android:drawableLeft="@mipmap/img_back"
        android:background="@android:color/transparent"
        android:gravity="left|center_vertical"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"
        android:visibility="visible"
        />
    <FrameLayout
        android:id="@+id/headerViewGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/navTitleTextView"
            style="@style/BarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/item_20"
        android:gravity="right|center_vertical"
        android:layout_weight="0">
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:background="@drawable/red_circle_bg"/>

        <Button
           android:id="@+id/rightButton"
           style="@style/BarButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@null"
           android:textColor="@color/colorAccent"
           android:textSize="@dimen/textSize"
           android:visibility="visible"
            android:layout_marginRight="10dp"
            />
    </FrameLayout>
</com.xilada.xldutils.view.NavigationBar>