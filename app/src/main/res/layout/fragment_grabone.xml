<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_Color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抢单"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/iv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_grabone_filter"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            />
        <View
            style="@style/view_line_h"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/slding_tab"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                app:tl_divider_color="@color/dividing_line_color"
                app:tl_divider_padding="12dp"
                app:tl_divider_width="0dp"
                app:tl_indicator_color="@color/textAccent"
                app:tl_indicator_gravity="BOTTOM"
                app:tl_indicator_height="2dp"
                app:tl_indicator_width="24dp"
                app:tl_indicator_width_equal_title="false"
                app:tl_tab_padding="0dp"
                app:tl_tab_space_equal="true"
                app:tl_textSelectColor="@color/textAccent"
                app:tl_textUnselectColor="@color/textColor_black66" />
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/l_transparent"
            android:orientation="vertical"
            >
            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="订单生成日期"
                android:textColor="@color/hintColor_66"
                android:textSize="14sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

                <TextView
                    android:id="@+id/tv_order_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_25dp_white_bg_line_accent_7e_1dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="6dp"
                    android:text="不限"
                    android:textColor="@color/textAccent"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_25dp_white_bg_line_1dp"
                        android:paddingBottom="6dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="6dp"
                        android:text="2017—09—09"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="→"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_25dp_white_bg_line_1dp"
                        android:paddingBottom="6dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:paddingTop="6dp"
                        android:text="2017—09—09"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="送货区域"
                android:textColor="@color/hintColor_66"
                android:textSize="14sp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:background="@color/white"
                android:padding="10dp"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="30dp"
                android:paddingTop="20dp"
                >
                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/radius_25dp_transparent_bg_line_accent_7e_1dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="46dp"
                    android:paddingRight="46dp"
                    android:paddingTop="8dp"
                    android:text="保存"
                    android:textColor="@color/textAccent"
                    android:textSize="15sp"
                    />
            </FrameLayout>
            <View
                android:id="@+id/v_gone_filter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>