<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_Color"
    >
    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:clickable="true" />
    <TextView
        android:id="@+id/tv_clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:drawableLeft="@mipmap/icon_clock"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textColor="@color/text_color"
        android:drawablePadding="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <View
       style="@style/view_line_h"/>
    <TextView
        android:id="@+id/tv_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:drawableLeft="@mipmap/icon_punch_position"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textColor="@color/text_color"
        android:maxLines="1"
        android:ellipsize="end"
        android:drawablePadding="4dp"
        />
    <View
        style="@style/view_line_h"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="24dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_punch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上班打卡"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/textAccent_7e"
            android:background="@drawable/radius_25dp_white_bg_line_accent_7e_1dp"
            android:paddingLeft="84dp"
            android:paddingRight="84dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />
    </LinearLayout>
</LinearLayout>