<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    android:background="@mipmap/bg_login">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_login"
        android:layout_marginTop="66dp"
        />
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/icon_login_user"
        android:drawablePadding="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/edittext_cursor_cyan"
        android:inputType="phone"
        android:background="@drawable/edittext_bottom_1dp"
        android:maxLength="11"
        android:paddingBottom="6dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_1dp"
            android:cursorVisible="true"
            android:drawableLeft="@mipmap/icon_login_code"
            android:drawablePadding="10dp"
            android:hint="请输验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:paddingBottom="6dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/edittext_cursor_cyan"
            android:textSize="14sp"
            android:layout_marginTop="18dp"
           />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/radius_25dp_transparent_bg_line_white_1dp"
            android:gravity="center"
            android:minWidth="86dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/get_code"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输密码"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/icon_login_password"
        android:drawablePadding="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/edittext_cursor_cyan"
        android:inputType="textPassword"
        android:background="@drawable/edittext_bottom_1dp"
        android:maxLength="20"
        android:paddingBottom="6dp"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="26dp"
        />
    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请再次确认密码"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/icon_login_confirm_password"
        android:drawablePadding="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/edittext_cursor_cyan"
        android:inputType="textPassword"
        android:background="@drawable/edittext_bottom_1dp"
        android:maxLength="20"
        android:paddingBottom="6dp"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="确认注册即同意《"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_service_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="用户服务协议"
                android:paddingTop="10dp"
                android:textColor="@color/textAccent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="》"
                android:textColor="@color/white"
                />
        </LinearLayout>
    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/textAccent"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="@color/textAccent"
        android:textSize="14sp"
        android:background="@drawable/radius_25dp_white_bg"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:padding="26dp"
        />
</LinearLayout>