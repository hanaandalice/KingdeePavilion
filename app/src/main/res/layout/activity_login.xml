<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    android:background="@mipmap/bg_login">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_login"
        android:layout_marginTop="100dp"
        />
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/icon_login_user"
        android:drawablePadding="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/edittext_cursor_cyan"
        android:inputType="phone"
        android:background="@drawable/edittext_bottom_1dp"
        android:maxLength="11"
        android:paddingBottom="6dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输密码"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/icon_login_password"
        android:drawablePadding="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/edittext_cursor_cyan"
        android:inputType="textPassword"
        android:background="@drawable/edittext_bottom_1dp"
        android:maxLength="20"
        android:paddingBottom="6dp"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textAccent"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="忘记密码"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="@color/textAccent"
        android:textSize="14sp"
        android:background="@drawable/radius_25dp_white_bg"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="34dp"
         android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:padding="16dp"
        />
</LinearLayout>