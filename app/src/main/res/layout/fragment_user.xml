<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_Color"
    >
    <com.zipingfang.jindiexuan.view.gradation.GradationScrollView
        android:id="@+id/gradationScrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <RelativeLayout
                android:id="@+id/layout_banner"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorAccent">

                <ImageView
                    android:id="@+id/iv_head_img"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="36dp"
                    android:background="@mipmap/icon_head_defult_circle"
                    android:padding="10dp"
                    android:src="@mipmap/icon_default_head" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兼职汽车司机"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_alignTop="@+id/iv_head_img"
                    android:layout_toLeftOf="@+id/tv_punch"
                    android:layout_toStartOf="@+id/tv_punch"
                    android:layout_marginTop="46dp"
                    android:layout_marginRight="6dp"
                    />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_head_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="赵三"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_toRightOf="@+id/textView"
                    android:background="@drawable/radius_25dp_transparent_bg_line_white_1dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="已审核"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/tv_punch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/radius_25dp_transparent_bg_line_white_1dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="56dp"
                    android:paddingRight="56dp"
                    android:paddingTop="8dp"
                    android:text="打卡"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TableLayout
                    android:id="@+id/table4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:background="#E0E0E0"
                    >
                    <TableRow>
                        <TextView
                            android:id="@+id/tv_my_wallect"
                            style="@style/hint_text_samll"
                            android:layout_marginRight="0.5dp"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/icon_my_wallect"
                            android:gravity="center"
                            android:minHeight="60dp"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="我的钱包"

                            />
                        <TextView
                            android:id="@+id/tv_recommend"
                            style="@style/hint_text_samll"
                            android:layout_marginRight="0.5dp"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/icon_recommend"
                            android:gravity="center"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="推荐有奖" />
                        <TextView
                            android:id="@+id/tv_leader_board"
                            style="@style/hint_text_samll"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/icon_leaderboard"
                            android:gravity="center"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="排行榜" />
                    </TableRow>
                    <View style="@style/view_line_h" />
                    <TableRow>
                        <TextView
                            android:id="@+id/tv_orders_setting"
                            style="@style/hint_text_samll"
                            android:layout_marginRight="0.5dp"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/icon_orders_setting"
                            android:gravity="center"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="接单设置" />
                        <TextView
                            android:id="@+id/tv_feedback"
                            style="@style/hint_text_samll"
                            android:layout_marginRight="0.5dp"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/icon_feedback"
                            android:gravity="center"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="意见反馈" />
                        <TextView
                            android:id="@+id/tv_modify_password"
                            style="@style/hint_text_samll"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/icon_modify_password"
                            android:gravity="center"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="修改密码" />
                    </TableRow>
                    <View style="@style/view_line_h" />
                    <TableRow>
                        <TextView
                            android:id="@+id/tv_user_share"
                            style="@style/hint_text_samll"
                            android:layout_marginRight="0.5dp"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/icon_user_share"
                            android:gravity="center"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="分享APP" />
                        <TextView
                            android:id="@+id/tv_about"
                            style="@style/hint_text_samll"
                            android:layout_marginRight="0.5dp"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/icon_about"
                            android:gravity="center"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="关于我们" />
                        <TextView

                            android:id="@+id/tv_test_updata"
                            style="@style/hint_text_samll"
                            android:background="@color/white"
                            android:drawablePadding="10dp"
                            android:drawableTop="@mipmap/icon_test_updata"
                            android:gravity="center"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:text="版本检测" />
                    </TableRow>
                </TableLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@color/white"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/tv_out_login"
                style="@style/hint_text"
                android:text="退出"
                android:background="@drawable/radius_25dp_white_bg"
                android:paddingLeft="86dp"
                android:paddingRight="86dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                />
        </LinearLayout>
    </com.zipingfang.jindiexuan.view.gradation.GradationScrollView>

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >
        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_message"
            />
        <View
            android:id="@+id/v_roger_that_oval"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/oval_while_bg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="14dp"
            />

    </RelativeLayout>

</RelativeLayout>